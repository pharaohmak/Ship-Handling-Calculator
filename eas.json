{
  "cli": {
    "version": ">= 0.52.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "ENVIRONMENT": "development",
        "image": "default"
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "ENVIRONMENT": "preview",
        "image": "default"
      }
    },
    "production": {
      "env": {
        "ENVIRONMENT": "production",
        "image": "default"
      }
    }
  }
}